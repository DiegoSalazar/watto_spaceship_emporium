<%- model_class = Product -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => Product %>
  </h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>
        <%= model_class.human_attribute_name(:name) %>
      </th>
      <th>
        <%= model_class.human_attribute_name(:manufacturer) %>
      </th>
      <th>
        <%= model_class.human_attribute_name(:product_class) %>
      </th>
      <th>
        <%= model_class.human_attribute_name(:tech_specs) %>
      </th>
      <th>
        <%= model_class.human_attribute_name(:created_at) %>
      </th>
      <th>
        <%=t '.actions', :default => t("helpers.actions") %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.manufacturer %>
        </td>
        <td>
          <%= product.product_class %>
        </td>
        <td>
          <%= product.tech_specs %>
        </td>
        <td>
          <%=l product.created_at, format: :long %>
        </td>
        <td>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
          new_product_path,
          :class => 'btn btn-primary' %>