<div class="product item col-xs-6 col-lg-6 grid-group-item">
  <div class="thumbnail">
    <%= link_to image_tag(product.thumbnail_url, class: 'group list-group-image'), product %>

    <div class="caption">
      <h4 class="group inner list-group-item-heading">
        <%= link_to product.name, product %>
      </h4>
    </div>
  </div>
</div>